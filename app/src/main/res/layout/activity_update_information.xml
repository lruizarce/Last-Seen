<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateInformation">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="YOUR NAME"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/change_name_button"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/name_input"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="NEW NAME"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/name"/>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="YOUR PHONE NUMBER"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/change_phone_number_button"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@id/phone_number"
        app:layout_constraintBottom_toBottomOf="@id/phone_number"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/phone_number_input"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="NEW PHONE NUMBER"
        app:layout_constraintTop_toTopOf="@id/phone_number"
        app:layout_constraintLeft_toLeftOf="@id/phone_number"
        app:layout_constraintBottom_toBottomOf="@id/phone_number"/>


    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="YOUR DEVICE NAME"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@id/phone_number"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/emergency_contact_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENCY CONTACTS"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/device_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/emergency_contact_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="EMERGENCY CONTACT NAME\n(303)111-1111"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@id/emergency_contact_label"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/change_emergency_contact_1_button"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@id/emergency_contact_1"
        app:layout_constraintBottom_toBottomOf="@id/emergency_contact_1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/emergency_contact_1_input"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="NEW EMERGENCY CONTACT"
        app:layout_constraintTop_toTopOf="@id/emergency_contact_1"
        app:layout_constraintLeft_toLeftOf="@id/emergency_contact_1"
        app:layout_constraintBottom_toBottomOf="@id/emergency_contact_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>