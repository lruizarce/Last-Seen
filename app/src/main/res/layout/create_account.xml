<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user_information_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/create_account_first_name_input"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@id/user_information_label"
        app:layout_constraintLeft_toLeftOf="@id/user_information_label" />

    <EditText
        android:id="@+id/create_account_last_name_input"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@id/create_account_first_name_input"
        app:layout_constraintLeft_toRightOf="@id/create_account_first_name_input" />

    <EditText
        android:id="@+id/create_account_date_of_birth_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Date of Birth"
        android:importantForAutofill="no"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/create_account_first_name_input"
        app:layout_constraintLeft_toLeftOf="@id/user_information_label" />

    <EditText
        android:id="@+id/create_account_phone_number_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@id/create_account_date_of_birth_input"
        app:layout_constraintLeft_toLeftOf="@id/user_information_label" />

    <EditText
        android:id="@+id/create_account_street_address_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Street"
        android:importantForAutofill="no"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@id/create_account_phone_number_input"
        app:layout_constraintLeft_toLeftOf="@id/user_information_label" />

    <EditText
        android:id="@+id/create_account_city_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="City"
        android:importantForAutofill="no"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toBottomOf="@id/create_account_street_address_input"
        app:layout_constraintLeft_toLeftOf="@id/user_information_label" />

    <EditText
        android:id="@+id/create_account_state_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="State"
        android:importantForAutofill="no"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toTopOf="@id/create_account_city_input"
        app:layout_constraintLeft_toRightOf="@id/create_account_city_input" />

    <EditText
        android:id="@+id/create_account_zip_code_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Zip Code"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/create_account_state_input"
        app:layout_constraintLeft_toRightOf="@id/create_account_state_input" />

    <EditText
        android:id="@+id/create_account_mac_address_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Bluetooth MAC Address"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/create_account_city_input"
        app:layout_constraintLeft_toLeftOf="@id/create_account_city_input" />

    <TextView
        android:id="@+id/emergency_contact_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency contacts (Optional)"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/create_account_mac_address_input"
        app:layout_constraintLeft_toLeftOf="@id/create_account_mac_address_input" />

    <EditText
        android:id="@+id/create_account_emergency_contact_first_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/emergency_contact_label"
        app:layout_constraintLeft_toLeftOf="@id/emergency_contact_label" />

    <EditText
        android:id="@+id/create_account_emergency_contact_last_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@id/create_account_emergency_contact_first_name_input"
        app:layout_constraintLeft_toRightOf="@id/create_account_emergency_contact_first_name_input" />

    <EditText
        android:id="@+id/create_account_emergency_contact_phone_number_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:importantForAutofill="no"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/create_account_emergency_contact_first_name_input"
        app:layout_constraintLeft_toLeftOf="@id/emergency_contact_label" />

    <TextView
        android:id="@+id/email_and_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email and Password"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/create_account_emergency_contact_phone_number_input"
        app:layout_constraintLeft_toLeftOf="@id/emergency_contact_label" />


    <EditText
        android:id="@+id/create_account_email_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/email_and_password_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/create_account_password_input"/>

    <EditText
        android:id="@+id/create_account_password_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/email_and_password_label"
        app:layout_constraintLeft_toRightOf="@id/create_account_email_input"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/create_account_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/create_account_email_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>